<!DOCTYPE html>
<html lang="fr" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
      {{ meta.title }}
    </title>
    <script src="https://cdn.tailwindcss.com?plugins=forms,typography,aspect-ratio">
      
    </script>
    <style>
      @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;
      
      500;700&family=Playfair+Display:wght@700&display=swap');
          .font-display {
        font-family: 'Playfair Display', serif;
      }
      
      .hover-scale {
        transition: transform 0.3s ease;
      }
      
      .hover-scale:hover {
        transform: translateY(-5px);
      }
      
      .gradient-text {
        background: linear-gradient(90deg, #6366f1, #8b5cf6);
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
      }
    </style>
  </head>
  <body class="bg-gray-50 antialiased">
    <!-- Navigation -->
    <nav class="sticky top-0 bg-white/80 backdrop-blur-md border-b border-gray-100 z-50">
      <div class="max-w-7xl mx-auto px-6">
        <div class="flex justify-between items-center h-20">
          <a href="/" class="text-2xl font-display gradient-text">LUXE</a>
          <div class="hidden md:flex space-x-8">
            <a href="/" class="font-medium text-gray-900 hover:text-indigo-600">Nouveautés</a>
            <a href="#" class="font-medium text-gray-500 hover:text-indigo-600">Collections</a>
            <a href="#" class="font-medium text-gray-500 hover:text-indigo-600">Concept</a>
          </div>
          <div class="flex items-center space-x-4">
            <button class="p-2 hover:bg-gray-100 rounded-full">
              <svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="1.5"
                  d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
                />
              </svg>
            </button>
            <button class="p-2 hover:bg-gray-100 rounded-full relative">
              <span
                class="absolute -top-1 -right-1 bg-indigo-600 text-white text-xs w-5 h-5 rounded-full flex items-center justify-center"
              >3</span>
              <a href="/panier">                <svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="1.5"
                    d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"
                  />
                </svg></a>
            </button>
          </div>
        </div>
      </div>
    </nav>

    <!-- Hero Section -->
    <section class="relative bg-gradient-to-br from-gray-900 to-indigo-900 text-white overflow-hidden">
      <div class="max-w-7xl mx-auto px-6 py-32 text-center">
        <h1 class="text-5xl font-display mb-6">
          L'Art de la<br />Mode Contemporaine
        </h1>
        <p class="text-xl text-gray-300 mb-8 max-w-2xl mx-auto">
          Découvrez des pièces uniques conçues par des artisans passionnés
        </p>
        <a
          href="#collections"
          class="inline-block px-8 py-4 bg-white text-gray-900 font-bold rounded-lg hover:bg-gray-100 transition-all"
        >
          Explorer la Collection
      </a>
      </div>
    </section>

    <!-- Featured Products -->
    <section id="collections" class="py-20">
      <div class="max-w-7xl mx-auto px-6">
        <h2 class="text-3xl font-display text-center mb-12">
          Nouveautés Exclusives
        </h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
          @each(product in featuredProducts)
            <div class="bg-white rounded-xl shadow-sm hover-scale overflow-hidden group">
              <div class="relative aspect-square bg-gray-50">
                <img src="{{ product.mainImage }}" alt="{{ product.name }}" class="w-full h-full object-cover" />
                <div class="absolute inset-0 bg-black/20 opacity-0 group-hover:opacity-100 transition-opacity">
                </div>
                <button
                  class="absolute bottom-4 right-4 bg-white px-4 py-2 rounded-full opacity-0 group-hover:opacity-100 transition-opacity"
                >
                  Voir le produit
            </button>
              </div>
              <div class="p-6">
                <h3 class="font-bold text-lg">
                  {{ product.name }}
                </h3>
                <p class="text-gray-600 text-sm my-2">
                  {{ product.shortDescription }}
                </p>
                <div class="flex justify-between items-center">
                  <span class="text-xl font-bold text-indigo-600">{{ product.price }}€</span>
                  <div class="flex items-center">
                    ★★★★★ <span class="text-gray-500 text-sm ml-2">(24)</span>
                  </div>
                </div>
              </div>
            </div>
          @endeach
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="bg-gray-900 text-white py-12">
      <div class="max-w-7xl mx-auto px-6 text-center">
        <p class="text-gray-400">
          &copy; 2024 LUXE. Tous droits réservés.
        </p>
      </div>
    </footer>
  </body>
</html>
