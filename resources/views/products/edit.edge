<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Modifier {{ product.name }}</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            primary: '#4338ca',
            secondary: '#6366f1',
            accent: '#f59e0b'
          },
          fontFamily: {
            sans: ['Inter var', 'sans-serif']
          }
        }
      }
    }
  </script>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body class="bg-gradient-to-br from-gray-50 to-gray-100 min-h-screen py-12">
  <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-xl overflow-hidden border border-white/30">
      <!-- En-tête avec dégradé -->
      <div class="bg-gradient-to-r from-primary to-secondary p-6">
        <div class="flex items-center gap-4">
          <a href="{{ route('products.show', { id: product.id }) }}" class="text-white hover:text-gray-200 transition">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
            </svg>
          </a>
          <div>
            <h1 class="text-2xl font-bold text-white">Modifier le produit</h1>
            <p class="text-primary-100 opacity-90">{{ product.name }}</p>
          </div>
        </div>
      </div>

      <form action="{{ route('products.update', { id: product.id }) }}" method="POST" class="p-6 space-y-8">
        {{ csrfField() }}

        
        <div class="space-y-6">
          <!-- Nom du produit -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Nom du produit</label>
            <div class="relative">
              <input type="text" name="name" value="{{ product.name }}" required
                     class="w-full px-4 py-3 bg-white/70 backdrop-blur-sm border border-gray-200 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent transition-all duration-200"
                     placeholder="Nom du produit">
            </div>
          </div>

          <!-- Description -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Description</label>
            <textarea name="description" rows="4"
                      class="w-full px-4 py-3 bg-white/70 backdrop-blur-sm border border-gray-200 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent transition-all duration-200"
                      placeholder="Décrivez votre produit...">{{ product.description }}</textarea>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Prix -->
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Prix (€)</label>
              <div class="relative">
                <input type="number" step="0.01" name="price" value="{{ product.price }}" required
                       class="w-full px-4 py-3 bg-white/70 backdrop-blur-sm border border-gray-200 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent transition-all duration-200"
                       placeholder="0.00">
                <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
                  <span class="text-gray-500">€</span>
                </div>
              </div>
            </div>

            <!-- Image URL -->
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">URL de l'image</label>
              <div class="relative">
                <input type="url" name="image_url" value="{{ product.image_url }}" required
                       class="w-full px-4 py-3 bg-white/70 backdrop-blur-sm border border-gray-200 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent transition-all duration-200"
                       placeholder="https://example.com/image.jpg">
              </div>
            </div>
          </div>
        </div>

        <!-- Boutons d'action -->
        <div class="flex flex-col sm:flex-row gap-4 pt-4 border-t border-gray-100">
          <button type="submit"
                  class="flex-1 bg-gradient-to-r from-primary to-secondary text-white px-6 py-3.5 rounded-lg font-medium hover:shadow-lg transition-all duration-300 hover:opacity-90 flex items-center justify-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            Enregistrer les modifications
          </button>
          <a href="{{ route('products.index') }}"
             class="flex-1 bg-gray-100 hover:bg-gray-200 px-6 py-3.5 rounded-lg font-medium text-gray-700 transition-all duration-300 flex items-center justify-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
            Annuler
          </a>
        </div>
      </form>
    </div>
  </div>
</body>
</html>