<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
      Votre Panier | LUXE
    </title>
    <script src="https://cdn.tailwindcss.com">
      
    </script>
  </head>
  <body class="bg-gray-50">
    <!-- Navigation -->

    <main class="max-w-7xl mx-auto px-6 py-12">
      <h1 class="text-3xl font-display mb-8">
        Votre Panier
      </h1>

      <div class="lg:grid lg:grid-cols-3 lg:gap-12">
        <!-- Items -->
        <div class="lg:col-span-2 space-y-6">
          @each(item in cart.items)
            <div class="bg-white rounded-xl p-6 shadow-sm flex items-start gap-6">
              <img src="{{ item.image }}" class="w-24 h-24 object-cover rounded-lg" />
              <div class="flex-1">
                <h3 class="font-bold text-lg">
                  {{ item.name }}
                </h3>
                <div class="flex items-center justify-between mt-4">
                  <div class="text-xl font-bold text-indigo-600">
                    {{ item.price }}€
                  </div>
                  <div class="flex items-center space-x-2">
                    <button class="px-3 py-1 border rounded-lg">-</button>
                    <span>{{ item.quantity }}</span>
                    <button class="px-3 py-1 border rounded-lg">+</button>
                  </div>
                </div>
              </div>
            </div>
          @endeach
        </div>

        <!-- Summary -->
        <div class="bg-white rounded-xl p-6 shadow-sm h-fit sticky top-20">
          <h2 class="text-xl font-bold mb-4">
            Récapitulatif
          </h2>
          <div class="space-y-4">
            <div class="flex justify-between">
              <span>Sous-total</span>
              <span>{{ cart.total }}€</span>
            </div>
            <div class="flex justify-between">
              <span>Livraison</span>
              <span>Gratuite</span>
            </div>
            <div class="border-t pt-4">
              <div class="flex justify-between font-bold">
                <span>Total</span>
                <span>{{ cart.total }}€</span>
              </div>
            </div>
            <a
              href="/checkout"
              class="block w-full bg-indigo-600 text-white py-4 text-center rounded-lg font-bold hover:bg-indigo-700 transition-colors"
            >
              Passer la commande
          </a>
          </div>
        </div>
      </div>
    </main>
  </body>
</html>
